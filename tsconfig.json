{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "vitepress-theme-linear/*": ["packages/theme/src/*"],
    },
    "composite": true
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.vue"],
  "exclude": ["**/dist/**", "node_modules"]
}
